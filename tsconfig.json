{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "types": ["vite/client"]
  },
  "include": [
    "App.tsx",
    "main.tsx",
    "vite-env.d.ts",
    "components/**/*",
    "contexts/**/*",
    "utils/**/*",
    "services/**/*",
    "styles/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "*.config.ts",
    "*.config.js",
    "vite.config.ts",
    "tailwind.config.js",
    "postcss.config.js",
    "**/*.md",
    "**/*.js",
    "deploy.sh",
    "cleanup-*.js",
    "setup-*.js",
    "open-*.js"
  ]
}